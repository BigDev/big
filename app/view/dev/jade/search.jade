		mixin horizontal-input("periodic", "Peri&oacute;dico/Institui&ccedil;&atilde;o")
		mixin horizontal-input("year", "Ano de Publica&ccedil;&atilde;o")
		mixin horizontal-input("keyword", "Palavras-chave")
