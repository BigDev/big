mixin horizontal-file(inputName, inputLabel)
	div.control-group
		label.control-label(for=inputName)= inputLabel
		div.controls
			input(type="file", name=inputName, accept="application/pdf")

mixin horizontal-input(inputName, inputLabel)
	div.control-group
		label.control-label(for=inputName)= inputLabel
		div.controls
			input(type="text", name=inputName)

mixin horizontal-textarea(inputName, inputLabel)
	div.control-group
		label.control-label(for=inputName)= inputLabel
		div.controls
			textarea(name=inputName)

script#layout(type="text/x-handlebars")
	div.row-fluid.
		{{outlet upperSearch}}
	div.row-fluid.
		{{outlet content}}
	
script#upper-search(type="text/x-handlebars")
	div#upper-bar.span12
		div.span2
			h1 BIG Busca
		form.form-inline(name="search")
			div.span4.offset1.
				<input type="text" class="input-block-level" {{bindAttr value="controllers.search.querystr"}} name="query" />
			div.span1.
				<button class="btn btn-primary" {{action query}} />Buscar</button>
	
script#article-info(type="text/x-handlebars")
	h1 {{title}}
	p {{abstract}}
