script#results(type="text/x-handlebars")
	div.row-fluid
		| {{outlet upperSearch}}
	div#results.row-fluid
		hr
		div.span7.
			{{outlet articleList}}
		div.span4.
			{{outlet articleInfo}}

script#article-list(type="text/x-handlebars")
	ul.article-list
		| {{#each controller}}
		li
			h2 {{#linkTo article this}}{{title}}{{/linkTo}}
			h3.
				{{year}} - {{authors}}
			| {{institution}} ({{classification}})
			| {{#linkTo results.info this}}Detalhes{{/linkTo}}
			| {{keywords}}
		| {{else}}
		| Nenhum resultado para sua busca //Needs some CSS magic!
		| {{/each}}	
